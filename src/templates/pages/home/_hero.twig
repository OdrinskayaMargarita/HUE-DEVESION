{% import "mixins/_adaptive-images.twig" as images %}
{% import "blocks/_modal-video.twig" as modal %}

{{ modal.modalVideo('modal-1', true, 'video/homepage/hero.mp4', 'video/homepage/hero.webm', 'img/homepage/hero/hero-2.jpg') }}

<section class="hero">
    <div class="hero__wrapper">
        <div class="hero__left hero__img media-wrap">
            {{ images.image("img/homepage/hero/hero-1_mob.jpg", "img/homepage/hero/hero-1.jpg", "color brings us together") }}
        </div>
        <div class="hero__right">
            <div class="hero__bg color--1" style="background-color: #FCE147"></div>
            <div class="hero__bg color--2" style="background-color: #E8A8FF"></div>

            {# IF we have an image #}
