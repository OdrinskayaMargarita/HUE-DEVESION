<section class="login">
    <div class="login__wrapper">
        <div class="login__form">
            <div class="login__title">
                {{ titles.title("Sign up", "login", "xxs", "dark", "h4") }}
            </div>
            <form class="form-theme form-theme--contacts form-valid">
                <div class="form-theme__item form-theme__field">
                    <div class="field-wrap">
                        <label for="email">Your Email</label>
                        <input id="email" type="email" data-input="email" class="input-required">
                    </div>
                    <span class="txt-error">It looks like you havenâ€™t entered a valid email address - please try again</span>
                </div>
                <div class="form-theme__item form-theme__field">
                    <div class="field-wrap">
                        <label for="name">Your Name</label>
                        <input id="name" type="text" data-input="text" class="input-required">
                    </div>
                    <span class="txt-error">Please enter at least 3 characters</span>
                </div>
                <div class="form-theme__item form-theme__field">
                    <div class="field-wrap">
                        <label for="pass">Your Password</label>
                        <input id="pass" type="password" data-input="password" class="input-required">
                    </div>
                    <span class="txt-error txt-error-short">Please enter at least 6 characters</span>
                </div>
                <button type="submit" class="button button--black">
                    <span data-splitting>Sign up</span>
                    <span data-splitting>Sign up</span>
                </button>
            </form>
            <div class="login__signup"><p>Aready have an account?</p> <a href="login.html">Login</a></div>
        </div>
    </div>
    <div class="login__img">
        <img src="./img/loginpage/login.jpg">
    </div>
</section>