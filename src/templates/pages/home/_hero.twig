            {# {{ images.image("", "img/homepage/hero/hero-2.jpg", "color brings us together") }} #}
            {# </div> #}
            {# ENDIF we have an image #}

            {# IF we have a video #}
            <div class="hero__video media-wrap js-media js-hero-media has-fullscreen">

                {# IF video is embed from vimeo #}
                 <div class="plyr__video-embed js-player js-hero-player js-inline-player" data-plyr-provider="vimeo"
                 data-plyr-embed-id="https://vimeo.com/578455099"></div>
                 <button type="button" class="plyr__fullscreen js-fullscreen"  data-modalVideo="modal-1"
                         aria-label="Fullscreen">
                 {{ icons.icon('expand') }}
